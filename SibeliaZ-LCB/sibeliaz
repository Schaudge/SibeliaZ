#!/bin/bash

align()
{
        ulimit -m 25600000
        output="$(./spoa $1 -l 1 -r 1 | tail -n +2)"
        if [ $? -eq 0 ]
        then
                header="$(sed -n -e '/^>/p' $1 | cut -d' ' -f2- | sed  's/;/    /g')"
                (
                        flock 200
                        echo "" >> "$2"
                        echo "a" >> "$2"
                        paste <(echo "$header") <(echo "$output") --delimiters '        ' >> "$2"
                ) 200>> "$2"
        fi
}

echo "##maf version=1" > "$3"
export -f align
find $1/blocks -name "*.fa" -printf "$PWD/%p\n" | xargs -I @ -P "$2" bash -c "align @ '$3'"

